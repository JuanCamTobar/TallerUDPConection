<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="287.0" prefWidth="330.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.PeerA">
    <Label text="PEER A">
        <font>
            <Font name="Eras Medium ITC" size="39.0" />
        </font>
        <VBox.margin>
            <Insets top="19.0" />
        </VBox.margin>
    </Label>

    <!-- Espacios de variables, con margen para moverlos hacia abajo y a la derecha -->
    <HBox alignment="CENTER" spacing="10.0">
        <Label text="IP del receptor:">
            <font>
                <Font name="Eras Medium ITC" size="12.0" />
            </font></Label>
        <TextField fx:id="ipField" editable="false" opacity="0.0" prefWidth="200.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets></TextField>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Puerto:">
            <font>
                <Font name="Eras Medium ITC" size="12.0" />
            </font></Label>
        <TextField fx:id="portField" alignment="CENTER" editable="false" opacity="0.0" prefWidth="100.0" />
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Mensaje:" />
        <TextField fx:id="messageField" alignment="CENTER" prefWidth="200.0">
            <opaqueInsets>
                <Insets top="10.0" />
            </opaqueInsets></TextField>
        <opaqueInsets>
            <Insets top="10.0" />
        </opaqueInsets>
    </HBox>

    <!-- Botón para enviar mensaje -->
    <Button text="Enviar" />

    <!-- Área de mensajes recibidos -->
    <Label text="Ultimo mensaje recibido:">
        <font>
            <Font name="Eras Medium ITC" size="20.0" />
        </font></Label>
    <TextArea fx:id="receivedMessagesArea" editable="false" prefHeight="73.0" prefWidth="312.0">
        <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" />
        </VBox.margin></TextArea>

</VBox>